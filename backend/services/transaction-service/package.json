{
  "name": "transaction-service",
  "version": "1.0.0",
  "description": "Transaction service for ElMahrosa Pi Smart City",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint .",
    "prettify": "prettier --write '**/*.{js,ts,json,md}'",
    "prepare": "npm run build"
  },
  "keywords": [
    "transaction",
    "service",
    "elmahrosa",
    "smart city"
  ],
  "author": "KOSASIH",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^6.8.0",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "body-parser": "^1.20.1"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "ts-node": "^10.9.1",
    "jest": "^29.0.3",
    "supertest": "^6.3.3",
    "eslint": "^8.30.0",
    "prettier": "^2.8.3",
    "nodemon": "^2.0.22",
    "@typescript-eslint/parser": "^5.50.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": ["ts", "js", "json", "node"]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
      "no-console": "warn",
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "tabWidth": 2
  }
}
